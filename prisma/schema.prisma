// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @unique
  username      String
  discriminator String
  wars          War[]
}

model War {
  date       String
  is_nodewar Boolean
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  name       String
  guild_name String
  logs       Log[]

  @@id([date, name, userId])
}

model Log {
  id         Int     @id @default(autoincrement())
  time       String
  player_one String
  player_two String
  guild      String
  is_kill    Boolean
  war        War     @relation(fields: [warDate, warName, warUserId], references: [date, name, userId], onDelete: Cascade)
  warDate    String
  warName    String
  warUserId  String
}

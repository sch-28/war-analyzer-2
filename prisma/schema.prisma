// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model War {
  id         Int      @id @default(autoincrement())
  date       DateTime
  is_nodewar Boolean
  guilds     Guild[]
  players    Player[]
  logs       Log[]
}

model Guild {
  id     Int      @id @default(autoincrement())
  name   String
  wars   War[]
  Player Player[]
}

model Player {
  id       Int    @id @default(autoincrement())
  name     String
  guild    Guild  @relation(fields: [guild_id], references: [id])
  guild_id Int
  kills    Log[]  @relation("killer")
  deaths   Log[]  @relation("victim")
  wars     War[]
}

model Log {
  id        Int       @id @default(autoincrement())
  time      DateTime?
  killer    Player    @relation("killer", fields: [killer_id], references: [id])
  killer_id Int
  victim    Player    @relation("victim", fields: [victim_id], references: [id])
  victim_id Int
  war       War       @relation(fields: [war_id], references: [id])
  war_id    Int
}
